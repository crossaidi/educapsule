source 'https://rubygems.org'

# Framework

gem 'rails', '4.0.1'

# Server

gem 'unicorn', '~> 4.7.0'

# DB

gem 'pg', '0.17.0'

# Styles & Templates

gem 'sass-rails', '~> 4.0.0'
gem 'zurb-foundation', '~> 4.3.2'
gem 'compass', '~> 0.12.2'
gem 'haml'

# JavaScript

gem 'jquery-rails'
gem 'coffee-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'

# IDE Support

group :doc do
  gem 'sdoc'
end

group :development do

  # Testing

  gem 'rspec-rails', '~> 3.0.0.beta'
  gem 'cucumber'
  gem 'shoulda'
  gem 'capybara'

  # Persistence operations

  gem 'faker'
  gem 'factory_girl_rails'
  gem 'database_cleaner'
  gem 'annotate'

  # Development automatic

  gem 'guard'
  gem 'guard-rails'
  gem 'guard-bundler'
  gem 'guard-rspec'
  gem 'guard-annotate'
  gem 'guard-rubocop'
  gem 'zeus', '~> 0.13.4.pre2'

  # Deployment

  gem 'capistrano', '~> 3.0.1'
  gem 'capistrano-rvm', '~> 0.1.0'
  gem 'capistrano-rails'
  gem 'capistrano-bundler'
  gem 'capistrano-unicorn', require: false

  # Other dev stuff

  gem 'debugger'
  gem 'rubocop'
  gem 'pry'
end